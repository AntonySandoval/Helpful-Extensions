    <PackageReference Include="OrchardCore.Contents" Version="1.0.0-rc1-12128" />
    <PackageReference Include="OrchardCore.DisplayManagement" Version="1.0.0-rc1-12128" />
    <PackageReference Include="OrchardCore.Flows" Version="1.0.0-rc1-12128" />
    <PackageReference Include="OrchardCore.Module.Targets" Version="1.0.0-rc1-12128" />
